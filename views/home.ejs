<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<style>
    *{
        margin: 0;
        padding: 0;
    }
    .heading{
        background-color: #f7b5c1;
    position: sticky;
    top: 0;
    z-index: 10;
    text-align: center;
    padding: 1px;
    /* height: 14px; */
    margin: 0px 0px 22px;
    }
    .form-container{
        display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    }
    .form-container form{
        width: 38%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 10px;
    margin: 3px;
    /* border: 1px solid; */
    border-radius: 9px;
    box-shadow: rgb(0 0 0 / 16%) 0px 1px 4px;
    }

    .full-form{
        padding: 3rem;
    }

</style>

<body>
    <div class="heading">
        <h2>CRUD Operation</h2>
    </div>
    <div class="form-container">
        <form action="/blog/post" method="post">
            <div class="full-form">
                <div>
            <label for="username"> Title:</label>
            <input type="text" id="Title" name="Title" placeholder="Title" required>
        </div>
            <br>
            <div></div>
            <label for="freeform">Blog Post:</label>
            <br>
            <textarea id="main_body" name="main_body" rows="4" cols="50"></textarea>
            <br>
        </div>
            <button type="submit">Post</button>
            </div>  
        </form>
    </div>

    <div>
        <h2>Blogs</h2>
        <form method="post" action="/getUser">
            <input type="text" id="title" name="title" />
            <button type="submit">Search</button>
        </form>
        <% if(results.length!=0){ %>
    <% results.forEach(function(result,i){ %>
        <h4>Title:<%= result.Title %>
        <br>
        Blog:<%= result.main_blog %>
        </h4>
        <br>
        <div style="display: flex;">
        <button id="editForm" onClick="displayFunction()" style="display: block;" >Edit</button>
        <a href="/:<%=result.idposts%>/delete"><button>Delete</button></a>
        </div>
        <br>
        <div id="displayEditForm" style="display: none;">
        <form method="post" action="/:<%= result.idposts %>/update">
            <label for="username"> Title:</label>
            <input type="text" id="Title" name="Title" placeholder="Title">
            <label for="freeform">Blog Post:</label>
            <br>
            <textarea id="main_blog" name="main_blog" rows="4" cols="50"></textarea>
            <br>
            <button type="submit">Edit</button>  
        </form>
    </div>
        <hr>
    <% }) %>
    <% }else if(results.length===0) { %>
        <h3>No Blog</h3>
    <% } %>
    </div>
</body>
<script>
    function displayFunction(){
        const displayEditForm=document.getElementById('displayEditForm')
        const editForm=document.getElementById('editForm')
        if(displayEditForm.style.display==="none"){
            displayEditForm.style.display="block"
            editForm.style.display="none"
        }else{
            displayEditForm.style.display="none"
            editForm.style.display="block"
        }
    }
</script>
</html>